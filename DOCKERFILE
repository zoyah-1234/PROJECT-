##DOCKER FILE MULTISTAGE 
FROM golang:1.22.5 as base

WORKDIR /app

COPY go.mod ./
RUN go mod download

COPY . .
RUN go build -o main .

# ðŸš€ Final Stage: Distroless (minimal image)
FROM gcr.io/distroless/static

WORKDIR /

COPY --from=base /app/main .
COPY --from=base /app/static ./static

EXPOSE 8080

CMD ["./main"]



